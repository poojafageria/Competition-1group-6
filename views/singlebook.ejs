<!-- Define a function to render the book -->
<% function renderBook(book) { %>
    <div class="item-details">
      <article>
        <h2>Title: <%= book.title %></h2>
        <div><%= book.description %></div>
        <p>
          <strong>Target Date:</strong> <%= formatDate(book.targetDate) %><br />
          <strong>Achieved:</strong> <%= book.achieved %>
        </p>
    
        <!-- Update button -->
        <form
          class="action-form"
          method="GET"
          action="/single-book/update/<%= book._id %>"
        >
          <button type="submit" class="update">update</button>
        </form>
    
        <!-- Delete button -->
        <form
          class="action-form"
          method="POST"
          action="/single-book/<%= book._id %>?_method=DELETE"
        >
          <button type="submit">delete</button>
        </form>
      </article>
    </div>
    <% } %>
  
      
    <% 
    function formatDate(dateString) {
        const date = new Date(dateString);
        // Format the date as desired (e.g., YYYY-MM-DD)
        const formattedDate = date.toLocaleDateString('fi-FI', { year: 'numeric', month: 'long', day: 'numeric' });
        return formattedDate;
    } 
    %>
  
  <!DOCTYPE html>
  <html lang="en">
    <!-- Pass a JavaScript variable to a partial in EJS -->
    <%- include('partials/head.ejs', { title: book.title }) %>
    <body>
      <%- include('partials/navbar.ejs') %>
      
  
      <div class="content">
        <div class="home">
          <div class="item-list">
            <% if (book) { %> <%= renderBook(book) %> <% } else { %>
            <p>No book found.</p>
            <% } %>
          </div>
        </div>
      </div>
  
      <%- include('partials/footer.ejs') %>
    </body>
  </html>